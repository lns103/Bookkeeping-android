<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bookkeeping" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/float_button_background</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/navbar_item_background</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnSurfaceInverse">@color/fill_background_disable</item>
        <item name="colorSurfaceVariant">@color/fill_background</item>


        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
<!--        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>-->
<!--        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>-->
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@drawable/splash_anim_vector</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="31">700</item>
    </style>
</resources>